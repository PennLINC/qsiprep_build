ARG TAG_ANTS

FROM pennlinc/qsiprep-ants:${TAG_ANTS} as base
FROM base as builder

RUN apt update && apt full-upgrade -y && \
  apt install --no-install-recommends -y \
    software-properties-common \
    zlib1g-dev \
    wget \
    git \
    build-essential \
    libeigen3-dev \
    fftw3 \
    libfftw3-dev \
    gnupg \
    ca-certificates \
    apt-transport-https \
    cmake \
    cmake-data \
    libboost-dev \
    libboost-iostreams-dev \
    libboost-filesystem-dev \
    libboost-system-dev \
    libboost-regex-dev && \
  apt-get clean && rm -rf /var/lib/apt/lists/* /var/tmp/*


ARG TORTOISE_SHA=5d0c688e85fd12a974d2ecbd8b567913a0b46c4f
RUN \
  mkdir -p /src \
  && cd /src \
  && git clone https://github.com/QMICodeBase/TORTOISEV4.git \
  && cd TORTOISEV4/TORTOISEV4 \
  && git checkout ${TORTOISE_SHA} \
  && sed -i '/BrukerBmatToTORTOISEBMTXT/d' CMakeLists.txt \
  && cmake . \
      -DUSECUDA=0 \
      -DQSIPREP=1 \
      -DITK_DIR=/tmp/ants/build/ITKv5-build \
      -DISDEBUG=0 \
      && \
    make

CMD ["/bin/bash"]
